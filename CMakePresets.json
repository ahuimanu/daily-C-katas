{
    "version": 6,
    "cmakeMinimumRequired": { "major": 3, "minor": 23, "patch": 0 },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Ninja (Debug)",
            "inherits": "base",
            "condition": {
                "type": "anyOf",
                "conditions": [
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
                ]
            },
            "generator": "Ninja",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "release",
            "displayName": "Ninja (Release)",
            "inherits": "base",
            "condition": {
                "type": "anyOf",
                "conditions": [
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
                ]
            },
            "generator": "Ninja",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        },
        {
            "name": "debug-apple-llvm",
            "displayName": "Ninja (Debug, Apple LLVM)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
            }
        },
        {
            "name": "release-apple-llvm",
            "displayName": "Ninja (Release, Apple LLVM)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "configurePreset": "debug",
            "condition": {
                "type": "anyOf",
                "conditions": [
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
                ]
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "configurePreset": "release",
            "condition": {
                "type": "anyOf",
                "conditions": [
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
                    { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
                ]
            }
        },
        {
            "name": "debug-apple-llvm",
            "displayName": "Debug (Apple LLVM)",
            "configurePreset": "debug-apple-llvm",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "release-apple-llvm",
            "displayName": "Release (Apple LLVM)",
            "configurePreset": "release-apple-llvm",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ]
}
