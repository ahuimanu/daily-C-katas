{
    "version": 6,
    "configurePresets": [
        {
            "name": "msvc-ninja-debug",
            "displayName": "Windows MSVC + Ninja (Debug)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/msvc-ninja-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "23"
            }
        },
        {
            "name": "msvc-ninja-release",
            "displayName": "Windows MSVC + Ninja (Release)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/msvc-ninja-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "23"
            }
        },
        {
            "name": "win-llvm-debug",
            "displayName": "Windows LLVM + Ninja (Debug)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/win-llvm-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_C_COMPILER": "C:/Program Files/LLVM/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "C:/Program Files/LLVM/bin/clang++.exe"
            }
        },
        {
            "name": "win-llvm-release",
            "displayName": "Windows LLVM + Ninja (Release)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generatomsvc-debug",
            "configurePreset": "msvc-ninja-debug",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc-ninja-release",
            "configuration": "Release"
        },
        {
            "name": "win-llvm-debug",
            "configurePreset": "win-llvm-debug",
            "configuration": "Debug"
        },
        {
            "name": "win-llvm-release",
            "configurePreset": "win-llvm-release",
            "configuration": "Release"
        },
        {
            "name": "mac-llvm-debug",
            "configurePreset": "mac-llvm-debug",
            "configuration": "Debug"
        },
        {
            "name": "mac-llvm-release",
            "configurePreset": "mac-llvm-release",
            "configuration": "Release"
            "name": "mac-llvm-release",
            "displayName": "macOS LLVM + Ninja (Release)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/mac-llvm-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "msvc-ninja-debug",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "msvc-ninja-release",
            "configuration": "Release"
        },
        {
            "name": "debug-apple-llvm",
            "configurePreset": "debug-apple-llvm",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "release-apple-llvm",
            "configurePreset": "release-apple-llvm",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ]
}
